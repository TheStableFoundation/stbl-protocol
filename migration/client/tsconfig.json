{
  "compilerOptions": {
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015", "ES2020"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["tests/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
